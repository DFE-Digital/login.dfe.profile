<div class="grid-row">
    <div class="col-12">
        <h1 class="heading-xlarge">
            Edit my details
        </h1>
        <form method="post" id="form-change-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <div class="form-group <%= locals.validationMessages.givenName ? 'form-group-error' : '' %>">
                <label class="form-label" for="givenName">First name</label>
                <% if (locals.validationMessages.givenName) { %>
                <p class="error-message" id="validation-first-name"><%=locals.validationMessages.givenName%></p>
                <% } %>
                <div>
                    <input class="form-control" id="givenName" name="givenName" type="text" value="<%=givenName%>"
                        <% if (locals.validationMessages.givenName) { %> aria-invalid="true" aria-describedby="validation-first-name" <% } %>/>
                </div>
            </div>
            <div class="form-group <%= locals.validationMessages.familyName ? 'form-group-error' : '' %>">
                <label class="form-label" for="givenName">Last name</label>
                <% if (locals.validationMessages.familyName) { %>
                <p class="error-message" id="validation-last-name"><%=locals.validationMessages.familyName%></p>
                <% } %>
                <div>
                    <input class="form-control" id="familyName" name="familyName" type="text" value="<%=familyName%>"
                            <% if (locals.validationMessages.familyName) { %> aria-invalid="true" aria-describedby="validation-last-name" <% } %>/>
                </div>
            </div>
            <div class="submit-buttons">
                <button type="submit" class="button">Save</button>
                <a href="/" class="button button-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>