<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
            Edit my details
        </h1>
        <form method="post" id="form-change-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <div class="govuk-form-group <%= (locals.validationMessages.givenName !== undefined) ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="givenName">
                    First name
                </label>
                <% if (locals.validationMessages.givenName) { %>
                    <span id="validation-first-name" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.givenName %>
                    </span>
                <% } %>
                <div>
                    <input type="text" id="givenName" name="givenName" value="<%=givenName%>" class="govuk-input govuk-!-width-one-half"
                        <% if (locals.validationMessages.givenName) { %> aria-invalid="true" aria-describedby="validation-first-name" <% } %>/>
                </div>
            </div>
            <div class="govuk-form-group <%= (locals.validationMessages.familyName !== undefined) ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="givenName">
                    Last name
                </label>
                <% if (locals.validationMessages.familyName) { %>
                    <span id="validation-last-name" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.familyName %>
                    </span>
                <% } %>
                <div>
                    <input type="text" id="familyName" name="familyName" value="<%=familyName%>" class="govuk-input govuk-!-width-one-half"
                        <% if (locals.validationMessages.familyName) { %> aria-invalid="true" aria-describedby="validation-last-name" <% } %>/>
                </div>
            </div>
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button">Save</button>
            </div>
        </form>
    </div>
</div>