<div class="row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            <span class="heading-secondary">
                Profile
            </span>
            <%= locals.displayName %>
        </h1>
        <% if (locals.flash.info) { %>
        <div class="notification notification-success">
            <%=locals.flash.info%>
        </div>
        <% } %>
        <dl class="inline">
            <dt>First name</dt>
            <dd><%= locals.user.given_name%></dd>
            <dt>Last name</dt>
            <dd><%= locals.user.family_name%></dd>
            <dt>Email</dt>
            <dd><%= locals.user.email%></dd>
        </dl>
    </div>
    <div class="col-4">
        <aside>
            <h2 class="heading-medium">Actions</h2>
            <nav class="subnav">
                <ul>
                    <li><a href="/change-password">Change my password</a></li>
                </ul>
            </nav>
        </aside>
    </div>
</div>