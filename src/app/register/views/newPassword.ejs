<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Create a password
        </h1>
    </div>
</div>
<div class="grid-row">
    <div class="col-12">
        <form method="post" id="form-register-new-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Create a password</legend>
                <p class="lede">Enter a password for your DfE Sign-in account. </p>
                <div class="form-group <%= locals.validationMessages.newPassword !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label" for="newPassword">Password</label>
                    <p class="form-hint">Your password needs to be a minimum of 12 characters</p>
                    <% if (locals.validationMessages.newPassword !== undefined) { %>
                    <p class="error-message" id="validation-new-password"><%= locals.validationMessages.newPassword %></p>
                    <% } %>
                    <div class="show-password">
                        <input class="form-control" id="newPassword" name="newPassword" type="password" value="<%=newPassword%>"
                               maxlength="64" required aria-required="true"
                                <% if (locals.validationMessages.newPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-new-password" <% } %>>
                    </div>
                </div>
                <div class="form-group <%= locals.validationMessages.confirmPassword !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label" for="confirmPassword">Confirm password</label>
                    <% if (locals.validationMessages.confirmPassword !== undefined) { %>
                    <p class="error-message" id="validation-confirm-password"><%= locals.validationMessages.confirmPassword %></p>
                    <% } %>
                    <div class="show-password">
                        <input class="form-control" id="confirmPassword" name="confirmPassword" type="password" value="<%=confirmPassword%>"
                               maxlength="64" required aria-required="true"
                                <% if (locals.validationMessages.confirmPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-confirm-password" <% } %>>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="button">Continue</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="grid-row">
    <div class="col-8">
        <%- include('../../includes/helpdesk'); %>
    </div>
</div>

