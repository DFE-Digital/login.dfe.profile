<% if (locals.email) { %>
<div class="js-back-link"></div>
<div class="notification notification-success" tabindex="0">
    <h2 class="notification-header govuk-!-font-size-24">Verification email sent</h2>
    <div class="inline-wrap">
        <p>A verification email has been sent to <%=locals.email%></p>
    </div>
</div>
<% } %>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
            Confirm your email address
        </h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <p class="govuk-body-l">Enter your verification code to confirm your email address.</p>
        <form method="post" id="form-verify-registration">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <div class="govuk-form-group <%= locals.validationMessages.code !== undefined ? 'govuk-form-group--error' : '' %>">
                <label class="govuk-label govuk-label--s" for="code">Verification code</label>
                <% if (locals.validationMessages.code !== undefined) { %>
                    <span id="validation-code" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> <%=locals.validationMessages.code %>
                    </span>
                <% } %>
                <input class="govuk-input govuk-!-width-one-third" id="code" name="code" type="text" value="<%=code%>" maxlength="8" <% if (locals.validationMessages.code !== undefined) { %> aria-invalid="true" aria-describedby="validation-code" <% } %>>
            </div>

            <% if (locals.email) { %>
                <p class="govuk-body">
                    <a class="govuk-link-bold" href="<%= locals.invitationId %>/resend">I have not received a verification email</a>
                </p>
            <% } %>
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button">Continue</button>
            </div>
        </form>
    </div>
</div>
