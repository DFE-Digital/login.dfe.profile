<% if (locals.email) { %>
<div class="notification notification-success" tabindex="0">
    <h2>Email confirmation sent</h2>
    <div class="inline-wrap">
        <p>We've sent an email to <%=locals.email%> &ndash;</p>
        <form method="post" class="inline" id="form-resend-register" action="/register/<%=invitationId%>/resend">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <button type="submit" class="button-text">Resend email</button>
        </form>
    </div>
</div>
<% } %>
<div class="grid-row">
    <div class="col-12">
        <h1 class="heading-xlarge">
            Confirm your email address
        </h1>
    </div>
</div>
<div class="grid-row">
    <div class="col-6">
        <p class="lede">Enter your verification code to confirm your email address.</p>
        <form method="post" id="form-verify-registration">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <div class="form-group <%= locals.validationMessages.code ? 'form-group-error' : '' %>">
                <label class="form-label" for="code">Verification code</label>
                <% if (locals.validationMessages.code) { %>
                <p class="error-message" id="validation-code"><%=locals.validationMessages.code%></p>
                <% } %>
                <input class="form-control char-width-8" id="code" name="code" type="text" value="<%=code%>"
                        <% if (locals.validationMessages.code) { %> aria-invalid="true" aria-describedby="validation-code" <% } %> />
            </div>
            <div class="submit-buttons">
                <button type="submit" class="button">Continue</button>
            </div>
        </form>
    </div>
</div>